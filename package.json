{
  "name": "harvest-toggl-sync",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w server\" \"npm run dev -w client\"",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client",
    "start": "npm run start -w server",
    "vercel-build": "cd client && npx vite build --outDir ../public"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@vercel/node": "^5.0.2",
    "concurrently": "^9.1.2"
  }
}
